{
"variables": {
    "do_api_token": "{{env `DIGITALOCEAN_TOKEN`}}"
    },
"builders": [
    {
        "type": "digitalocean",
        "api_token": "{{ user `do_api_token`}}",
        "image": "ubuntu-20-04-x64",
        "region": "nyc1",
        "size": "s-1vcpu-1gb",
        "ssh_username": "root"
    },
    {
        "type": "amazon-ebs",
        "access_key": "{{user `aws_access_key`}}",
        "secret_key": "{{user `aws_secret_key`}}"
    }
    ],
"provisioners": [
    {
        "type": "shell",
        "inline": [
            "curl -fsSL https://get.docker.com | sh"
        ]
        }
    ]
}